.sort-wrap.notshown
  .toggle
    = image_tag 'dropdown.png', alt: 'dropdown_icon'
    .filter SORT
  %h3 Sort
  %ul#sortby
    %li
      %span.sort-label Country
      %input{type: "checkbox", value: "#{country_path}", id: ""}/
    %li
      %span.sort-label Value Chain
      %input{type: "checkbox", value: "#{valuechain_path}", id: ""}/
    %li
      %span.sort-label Gender Composition of Group
      %input{type: "checkbox", value: "#{gender_composition_path}", id: ""}/
    %li
      %span.sort-label Gender of Group Leader
      %input{type: "checkbox", value: "#{gender_leader_path}", id: ""}/
    
:javascript
  $(document).ready( function() {
  $('.toggle').on('click', function(e){
    $('.sort-wrap').toggleClass('notshown');
  });

  $('.sort-wrap').mouseleave(function(){$(this).addClass('notshown');})


  $("#sortby input[type=checkbox]").change(function() {
  
  if ($(this).prop('checked') )
   { 
   $.getScript($(this).val());
   $("#sortby input:not(:checked)").prop('disabled', true);
   }   
  else
    { 
    $("#sortby input").prop('disabled', false);
    }
  });
  });